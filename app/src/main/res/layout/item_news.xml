<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/news_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALERT"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="#F05E23"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Oct 2025"
                android:textSize="12sp"
                android:textColor="#888888"/>
        </LinearLayout>

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Campus Closed due to Rain"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#232220"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/news_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please stay indoors until further notice."
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/news_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Admin"
            android:textSize="12sp"
            android:textColor="#AAAAAA"
            android:gravity="end"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>